<div class="container">
  <h1>Black mirror episodes</h1>
</div>
<div class="container">
  <div class="row">
    {{#each items}}
    <div class="col-md-3">
      <div class="card">
        <img class="card-img-top" src="{{image}}" alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title">{{title}}</h5>
          <p class="card-text">{{description}}</p>
          <a href="/black-mirror/season/{{id}}" class="btn btn-primary">details</a>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>
